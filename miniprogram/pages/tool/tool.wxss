.container{
  margin-top: 50rpx;
  align-items:initial;
  font-size: 30rpx;
}

navigator{
  height: 100rpx;
  display: block;
  color: white;
 
}
.nav-list{
  width: 100%;
 margin-top: 100rpx;
}
.nav-li{
  width: 80%;
  margin: 0 auto;
  padding:30rpx;
  border-radius: 12rpx;
  margin-top: 40rpx;
  line-height: 100rpx;
  position: relative;
  z-index: 1;
}
.nav-title i{
font-size:70rpx;
float:right;
line-height:100rpx;

}

.tool-detail{
  text-align: left;
}
.tool-title{
  color: #7ac2ba;
  min-width:calc(4em + 30rpx);
  
  height: 60rpx;
  text-align: justify;
  line-height: 60rpx;
   align-items:center;
}
.tool-info{
  font-size: 30rpx;
  color: #4e4e4e;
}
.form-item{
  padding: 1rpx 30rpx;
  display: flex;
  background-color: white;
  margin-top: 10rpx;
  min-height: 100rpx;
  line-height: 100rpx;
   align-items: center;
   justify-content: center;
   
}
.item-right{
  width: 70%;
  margin-left: 40rpx;
}


.btn-area button{
  width: 30%;
  float: right;
  margin: 20rpx 0 0 20rpx;

}