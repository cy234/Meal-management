.beforeCharts{
  width: 90%;
 padding: 200rpx 0rpx;
 
  background: #fff;
}
.section{
  margin-bottom: 50rpx;
}
.form_hd{
  margin-bottom: 50rpx;
}
.beforeinput{width: 80%;margin: 0 auto;}
.beforeCharts .btn-area{margin-top:100rpx;}
.tip_detail{
  color: #888;
  font-size: 30rpx;
}
.switch-type {
  margin-top: 8%;
  display: flex;
}
.switch-type .btn:first-child {
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
}
.switch-type .btn:last-child {
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
}
.switch-type .btn {
  background: #dfdfdf;
  padding: 10rpx 40rpx;
}
.switch-type .btn.active {
  border: 2rpx solid #7ac2ba;
  background: #008b8b;
  color: #fff;
}
.pickershow{
  display: block;
  
}
.pickerhide{
  display: none;
}
.fa {
  margin-right: 20rpx;
}
.container1,.container2{
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
.container1{
  top:25%;
 height: 50%;
  left: 0;
  right: 0;
}
.container2{
